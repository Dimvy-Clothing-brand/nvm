{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Bash in Docker Container",
      "type": "docker",
      "request": "launch",
      "platform": "node",
      "containerName": "nvm-dev-launch"
    },
    {
      "name": "Test NVM Installation",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test/runner.js",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test",
        "NVM_DIR": "${workspaceFolder}"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Shell Script",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/debug-helper.js",
      "console": "integratedTerminal",
      "env": {
        "SCRIPT_TO_DEBUG": "${input:scriptPath}",
        "DEBUG_ARGS": "${input:scriptArgs}"
      }
    }
  ],
  "inputs": [
    {
      "id": "scriptPath",
      "description": "Path to shell script to debug",
      "default": "nvm.sh",
      "type": "promptString"
    },
    {
      "id": "scriptArgs",
      "description": "Arguments for the script",
      "default": "--version",
      "type": "promptString"
    }
  ]
}
